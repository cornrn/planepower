: foreach *.c |> !cc |>

:main_plane.o ../shared/uart_communication.o ../shared/data_decoding.o ../shared/udp_communication.o ../shared/log.o ../shared/circular_buffer.o|> !ld |> main_plane


:main_lisa_communication.o ../shared/uart_communication.o ../shared/data_decoding.o ../shared/log.o ../shared/circular_buffer.o|> !ld |> main_lisa_communication


