include_rules

ifdef BBONE

CC=clang
CPPFLAGS += -Iinclude -Wall -Werror
CPPFLAGS += -I..
CPPFLAGS += -I../shared
CFLAGS += -ggdb -pthread -D _BSD_SOURCE 
