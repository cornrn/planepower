name:                viz
synopsis:            Wind Turbine Flight Visualizer
version:             0.1.0.0
build-type:          Simple
cabal-version:       >=1.8

executable multicarousel
  hs-source-dirs:    . ../../extern/rawesome/wtfviz/src ../plot-ho-matic/src
  main-is:           Viz.hs
  build-depends:     base >= 4.5.0 && < 4.7,
                     cmdargs >= 0.10,
                     random,
                     not-gloss >= 0.5.0,
                     spatial-math,
                     hmatrix,
                     protocol-buffers,
                     protocol-buffers-descriptor,
                     bytestring

  if os(OSX)
    cpp-options:     -DOSX
    build-depends:   zeromq3-haskell
  else
    build-depends:   zeromq-haskell

  ghc-options:       -O2 -threaded -with-rtsopts=-T
